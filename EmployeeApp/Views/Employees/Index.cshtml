@model IEnumerable<EmployeeApp.Models.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employees</h2>

<table class="table table-bordered table-hover">

    <tr>
        <th>Employees</th>
        <th>Department</th>
        <th>Role</th>
        <th style="text-align:center">Details</th>
    </tr>
    <tbody>
        @foreach (var employee in Model)
        {

            <tr>
                <td>
                    @Html.ActionLink(employee.FullName, "Edit", "Employees", new { id = employee.Id }, null)
                </td>
                <td>
                    @employee.Department.Name
                </td>
                <td>
                    @employee.Role.Name
                </td>
                <td>
                    <div class="employee-details">
                        @*Use ToolTip*@
                        <div class="tooltip">
                            Contact
                            <div class="tooltiptext">
                                <span>Mobile Phone: @employee.ContactDetails.MobilePhone</span><hr />
                                <span>Address: @employee.ContactDetails.Address</span><hr />
                                <span>City: @employee.ContactDetails.City</span><hr />
                                <span>Postal Code: @employee.ContactDetails.PostalCode</span>
                            </div>
                        </div>
                    </div>
                    <div class="employee-details">
                        <div class="tooltip">
                            Personal
                            <div class="tooltiptext">
                                <span>Sex: @employee.PersonalDetails.Sex</span><hr />
                                <span>Age: @employee.PersonalDetails.Age</span><hr />
                                <span>Family Status: @employee.PersonalDetails.CurrentFamilyStatus</span><hr />
                                <span>Childrens: @employee.PersonalDetails.NumberOfChildren</span><hr />
                                <span>SSN:@employee.PersonalDetails.SSN</span><hr />
                                <span>Identity Card: @employee.PersonalDetails.IdentityCard</span>
                            </div>
                        </div>
                    </div>
                </td>
                <td>
                    @Html.ActionLink("Shift Form", "Assign", "ShiftAssigns", new { id = employee.Id }, null)
                </td>
            </tr>
            <tr>
                <div class="tooltip">
                    Hover over me
                    <span class="tooltiptext">Tooltip text</span>
                </div>
            </tr>
        }
    </tbody>
</table>