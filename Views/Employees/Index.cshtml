@model IEnumerable<EmployeeApp.Models.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employees</h2>

<table class="table table-bordered table-hover">

    <tr>
        <th>Employees</th>
        <th>Department</th>
        <th>Role</th>
        <th>Details</th>
    </tr>
    <tbody>
        @foreach (var employee in Model)
        {

            <tr>
                <td>
                    @Html.ActionLink(employee.FullName, "Edit", "Employees", new { id = employee.Id }, null)
                </td>
                <td>
                    @employee.Department.Name
                </td>
                <td>
                    @employee.Role.Name
                </td>
                <td>
                    <div>
                        @*Use ToolTip*@
                        <span>Contact</span>
                        <span>Mobile Phone: @employee.ContactDetails.MobilePhone</span>
                        <span>Address: @employee.ContactDetails.Address</span>
                        <span>City: @employee.ContactDetails.City</span>
                        <span>Postal Code: @employee.ContactDetails.PostalCode</span>
                    </div>
                    <div>
                        Personal
                        <span>Sex: @employee.PersonalDetails.Sex</span>
                        <span>Age: @employee.PersonalDetails.Age</span>
                        <span>Family Status: @employee.PersonalDetails.CurrentFamilyStatus</span>
                        <span>Childrens: @employee.PersonalDetails.NumberOfChildren</span>
                        <span>SSN:@employee.PersonalDetails.SSN</span>
                        <span>Identity Card: @employee.PersonalDetails.IdentityCard</span>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>